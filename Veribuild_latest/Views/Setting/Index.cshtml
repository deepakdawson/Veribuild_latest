@{ 
    ViewData[Utils.SidebarActiveMenu_Key] = "manageprofile";
    ViewData[Utils.SidebarActiveSubMenu_Key] = "updateprofile";
}
<div class="tradesmenPage-section">
    <div class="container">
        <h2>Organisation Settings</h2>
        <div id="wrapper">
            <partial name="~/Views/Shared/Common/_Sidebar.cshtml" />

            <div class="content-wrapper">
                <div class="myDetail-box">
                    <p>You can manage your profile information on this page</p>
                    <figure>
                        <h6>Update My Details</h6>
                        <div class="sub-box">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group upload-wrap">
                                        <div class="img-wrapper">
                                            <img class="image img-fluid" src="~/images/user_placeholder.svg">
                                        </div>
                                        <button class="btn btn-green">Add Image</button>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="lbl-details">
                                            Your already register as a Builder. If you want to change your role
                                            please <a href="/">contact</a> admin
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="lbl-txt">First Name</label>
                                        <input type="text" class="form-control" placeholder="Enter name">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="lbl-txt">Last Name</label>
                                        <input type="text" class="form-control" placeholder="Enter name">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="lbl-txt">Email</label>
                                        <input type="email" class="form-control" placeholder="Enter email">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="lbl-txt">Agency Name</label>
                                        <input type="text" class="form-control" placeholder="Enter name">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="lbl-txt">Address</label>
                                        <input type="text" class="form-control" placeholder="Enter address">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="lbl-txt">Website</label>
                                        <input type="text" class="form-control" placeholder="Enter name">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="lbl-txt">Phone Number</label>
                                        <input type="text" class="form-control" placeholder="Enter here">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="lbl-txt"></label>
                                        <div class="input-group mt-2">
                                            <input type="text" class="form-control" placeholder="Enter number">
                                            <span class="btn-green">Verify</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="cta-box">
                                <button type="button" class="btn btn-green">Save</button>
                            </div>
                        </div>
                    </figure>
                    <figure>
                        <div class="sub-box">
                            <div class="row">
                                <div class="col-sm-2">
                                    <div class="form-group">
                                        <h5 class="file-upload-head">Credentials</h5>
                                        <div class="file-wrapper">
                                            <label class="w-100" for="doc113">
                                                <img src="assets/img/pdf-demo.svg" class="img-fluid" />
                                                <input class="drop-file" type="file" name='' id="doc113">
                                            </label>
                                            <div class="title-field">
                                                <input type="text" class="form-control" placeholder="" />
                                            </div>
                                        </div>
                                        <button type="button" class="btn btn-green" id="add-pdf-box">Add more</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </figure>
                    <figure>
                        <h6>Change Password</h6>
                        <div class="sub-box">
                            <div class="form-group">
                                <label class="lbl-txt">Current password</label>
                                <input type="password" class="form-control" placeholder="Enter here">
                                <span class="input-icon"><img src="assets/img/icons/eye-icon.svg" alt="icon"></span>
                            </div>
                            <div class="form-group">
                                <label class="lbl-txt">New password</label>
                                <input type="password" class="form-control" placeholder="Enter here">
                                <span class="input-icon"><img src="assets/img/icons/eye-icon.svg" alt="icon"></span>
                            </div>
                            <div class="form-group">
                                <label class="lbl-txt">Confirm password</label>
                                <input type="password" class="form-control" placeholder="Enter here">
                                <span class="input-icon"><img src="assets/img/icons/eye-icon.svg" alt="icon"></span>
                            </div>
                            <div class="cta-box">
                                <button type="button" class="btn btn-green">Save password</button>
                            </div>
                        </div>
                    </figure>
                </div>
            </div>

        </div>
    </div>
</div>