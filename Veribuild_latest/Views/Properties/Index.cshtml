@model PropertyVM
@{
    ViewData[Utils.Title_Key] = "Properties";
    ViewData[Utils.NavActive_Key] = "myproperties";

}

<section class="tab-section">
    <div class="container">
        <partial name="~/Views/Shared/Common/_Navbar.cshtml" />
        
        <div class="tab-content" id="pills-tabContent">
            <div class="myPropertyWrap tab-pane fade show active" id="pills-link2" tabindex="0">
                <form>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-row">
                                <label class="lbl-text">Select by area</label>
                                <div class="form-group">
                                    <select class="form-select">
                                        <option selected="">Open </option>
                                        <option value="1">One</option>
                                        <option value="2">Two</option>
                                        <option value="3">Three</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-row">
                                <label class="lbl-text">Search</label>
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Search" id="searchbox"/>
                                    <span class="input-icon"><img src="~/images/icons/search-icon.svg" width="20" alt="icon"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="table">
                        <label class="lbl-text">Properties</label>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col">Address</th>
                                    <th scope="col">Controller</th>
                                    <th scope="col">Seller</th>
                                    <th scope="col">Date added</th>
                                    <th scope="col">Phone</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Property property in Model.Properties)
                                {
                                    <tr>
                                        <td>@(property.Address)</td>
                                        <td><img width="20" src="/images/user-key-icon.svg">@(property.BuilderName)</td>
                                        <td>Name here</td>
                                        <td>@(property.CreatedAt.ToString("dd-MM-yyyy"))</td>
                                        <td>@(property.UserPhoneNumber)</td>
                                        <td><i class="fa-solid fa-arrow-down-arrow-up"></i>@(property.Status)</td>
                                        <td class="text-center">
                                            <a href="#"><img src="assets/img/icons/edit-icon.svg" width="20" alt="icon"></a>
                                            <a href="#"><img src="assets/img/icons/eye-icon-active.svg" width="20" alt="icon"></a>
                                            <a href="#"><img src="assets/img/icons/setting-icon.svg" alt="icon"></a>
                                            <a href="#"><img src="assets/img/icons/transfer-icon.svg" alt="icon"></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
@section scripts{ 
    <script src="~/js/property/properties.js" type="text/javascript"></script>
}