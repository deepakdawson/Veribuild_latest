<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData[Utils.Title_Key] - Veribuild</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/home/css/custom-style.css" type="text/css" media="screen" />
    <link rel="stylesheet" href="~/home/css/layout.css" type="text/css" media="screen" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/11.0.9/css/intlTelInput.css" rel="stylesheet" media="screen">
    <link href="~/css/loader.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <header class="header">
        <div class="container">
            <div class="row">
                <nav class="navbar">
                    <a href="/" target="_blank">
                        <img src="~/home/img/header-logo.png" alt="veribuild logo" width="303" height="68" class="img-fluid">
                    </a>
                </nav>
            </div>
        </div>
    </header>

    <section class="login-section">
        @RenderBody()
    </section>


    <footer class="footer">
        <div class="upper-footer">
            <div class="container">
                <div class="row">
                    <div class="col-md-3">
                        <div class="footer-logo">
                            <a href="/">
                                <img width="306" height="68" src="~/home/img/footer-logo.png" class="img-fluid" alt="veribuild logo">
                            </a>
                        </div>
                        <ul class="footer-social">
                            <li>
                                <a target="_blank" class="social-link" aria-label="Social" href="#"><i class="fab fa-facebook-f"></i></a>
                            </li>
                            <li>
                                <a target="_blank" class="social-link" aria-label="Social" href="#"><i class="fa-brands fa-x-twitter"></i></a>
                            </li>
                            <li>
                                <a target="_blank" class="social-link" aria-label="Social" href="#"><i class="fab fa-instagram"></i></a>
                            </li>
                            <li>
                                <a target="_blank" class="social-link" aria-label="Social" href="#"><i class="fab fa-linkedin-in"></i></a>
                            </li>
                            <li>
                                <a target="_blank" class="social-link" aria-label="Social" href="#"><i class="fa-brands fa-medium"></i></a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-md-3">
                        <div class="footer-heading">
                            <h3>Useful Links</h3>
                            <ul>
                                <li class="nav-item">
                                    <a href="#">Key Features</a>
                                </li>
                                <li class="nav-item">
                                    <a href="#">FAQs</a>
                                </li>
                                <li class="nav-item">
                                    <a href="#">Blogs</a>
                                </li>
                                <li class="nav-item">
                                    <a href="#">Roadmap</a>
                                </li>
                                <li class="nav-item">
                                    <a href="#">Contact Us</a>
                                </li>
                                <li class="nav-item">
                                    <a href="#">Privacy Policy</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="footer-heading footer-contact">
                            <h3>Contact Us</h3>
                            <ul class="fa-ul">
                                <li class="nav-item">
                                    <a href="https://tvdg.io/9AAAAA" target="_blank"><span class="fa-li"><i class="fas fa-map-marker-alt"></i></span>Level 18, 123 Eagle Street,  Brisbane, Queensland 4000 Australia</a>
                                </li>
                                <li class="nav-item">
                                    <a href="mailto:admin@veridocsign.com"><span class="fa-li"><i class="far fa-envelope"></i></span>admin@veridocsign.com</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <a href="https://veridocglobal.com/" target="_blank">
                            <img src="/home/img/veridoc-global.png" width="180" height="148" class="img-fluid" alt="VeriDoc Global">
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="lower-footer">
            <div class="copyright-strip">
                <p>© @(DateTime.Now.Year) | ALL RIGHTS RESERVED, VERIDOC GLOBAL PTY LTD</p>
            </div>
        </div>
    </footer>

    <partial name="~/Views/Shared/Common/_Loader.cshtml" />

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/11.0.9/js/intlTelInput.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/11.0.9/js/intlTelInput.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/11.0.9/js/utils.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/utils/loader.js" type="text/javascript"></script>
    <script src="~/js/utils/common.js" type="text/javascript"></script>
    <script src="~/js/utils/messages.js" type="text/javascript"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
